<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    >



    <ImageView
        android:id="@+id/item_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test_image2"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/item_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Tsum Tsum 手機螢幕擦 多款可選"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:shadowColor="#A1A1A1"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="0.5"
            />

        <TextView
            android:id="@+id/item_price_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="$99"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:shadowColor="#A1A1A1"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="0.5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="bottom"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/add_shopping_car_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_purchase_car_selector"
            android:text="加入購物車"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>



</android.support.v7.widget.CardView>