<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/item_car_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/test_image2"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/item_car_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tsum Tsum 螢幕擦"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/item_car_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$99"
                android:textSize="18dp"
                />

            <Button
                android:id="@+id/item_car_count_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="數量 1"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_selector"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/item_car_delete_button"
                android:layout_width="46dp"
                android:layout_height="25dp"
                android:text="刪除"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_selector"
                android:textSize="15dp"
                android:padding="3dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>