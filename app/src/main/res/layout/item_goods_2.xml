<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/item_product_background"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/drawer_new"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tsum Tsum 手機螢幕擦 多款可選"
                android:textSize="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/test_image2"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/item_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="NT$99"
                android:layout_marginLeft="10dp"
                />


            <Button
                android:id="@+id/add_shopping_car_button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_purchase_car_selector"
                android:text="加入購物車"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>