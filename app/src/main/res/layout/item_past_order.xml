<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/past_order_selector"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/past_order_date_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="2015/12/3"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/past_order_total_price_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="總花費:NT$ 2100"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/past_order_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已出貨"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext_selector"
            android:padding="5dp"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

</LinearLayout>